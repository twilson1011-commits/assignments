#include <iostream>

class Point2D {
private:
    int x;
    int y;

public:
    // Default constructor
    Point2D() : x(0), y(0) {}

    // Parameterized constructor
    Point2D(int xVal, int yVal) : x(xVal), y(yVal) {}

    // Copy constructor
    Point2D(const Point2D& other) : x(other.x), y(other.y) {}

    // Operator + : returns a new Point2D, does not modify operands
    Point2D operator+(const Point2D& rhs) const {
        return Point2D(x + rhs.x, y + rhs.y);
    }

    // Operator - : returns a new Point2D, does not modify operands
    Point2D operator-(const Point2D& rhs) const {
        return Point2D(x - rhs.x, y - rhs.y);
    }

    // Operator == : const correctness
    bool operator==(const Point2D& rhs) const {
        return x == rhs.x && y == rhs.y;
    }

    // Operator != : reuse operator== to avoid duplicating logic
    bool operator!=(const Point2D& rhs) const {
        return !(*this == rhs);
    }

    // Stream output operator << as a friend
    friend std::ostream& operator<<(std::ostream& os, const Point2D& pt) {
        os << "(" << pt.x << ", " << pt.y << ")";
        return os;
    }
};

int main() {
    Point2D a(3, 4);
    Point2D b(1, 2);

    Point2D c = a + b;  // c = (4, 6)
    Point2D d = a - b;  // d = (2, 2)

    if (c == Point2D(4, 6)) {
        std::cout << "Math still works.\n";
    }

    std::cout << a << std::endl; // prints: (3, 4)

    return 0;
}
